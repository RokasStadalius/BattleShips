@page "/"
@namespace BattleShips.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script defer>
    function openNewTab(url) {
        window.open(url, '_blank');
    }

    window.listenForKeyPress = function (dotNetRef) {
        // Listen to the window object to capture the 'R' key event during drag
        window.addEventListener('keydown', function (event) {
            if (event.key === 'r' || event.key === 'R') {
                // Call the Blazor method to rotate the ship
                dotNetRef.invokeMethodAsync('RotateShip');
                console.log("paspausta");
            }
        });
    };

    function showWinnerModal() {
        // Use Bootstrap's JavaScript to show the modal
        $('#winnerModal').modal('show');
    }
</script>
<component type="typeof(App)" render-mode="ServerPrerendered" />
